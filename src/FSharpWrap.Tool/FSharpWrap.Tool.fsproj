<Project Sdk="Microsoft.NET.Sdk">

  <!-- Project properties -->
  <PropertyGroup>
    <AssemblyName>fsharpwrap</AssemblyName>
    <OutputType>Exe</OutputType>
    <RootNamespace>FSharpWrap.Tool</RootNamespace>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <!-- Source files -->
  <ItemGroup>
    <Compile Include="Path.fs" />
    <Compile Include="Reflection\Namespace.fs" />
    <Compile Include="Reflection\Types.fs" />
    <Compile Include="Reflection\TypeRef.fs" />
    <Compile Include="Reflection\Member.fs" />
    <Compile Include="Reflection\TypeInfo.fs" />
    <Compile Include="Reflection\AssemblyInfo.fs" />
    <Compile Include="Reflection\Reflect.fs" />
    <Compile Include="Generate.fs" />
    <Compile Include="Arguments.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <!-- References -->
  <ItemGroup>
    <PackageReference Include="System.Reflection.MetadataLoadContext" Version="4.7.2" />
  </ItemGroup>

</Project>
